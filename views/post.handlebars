<div class="text-center">
  <h2>{{title}}</h2>

  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  {{#each comments as |comment| }}
    <div class="d-flex">{{comment.title}}</div>
    <div class="d-flex">{{comment.date_created}} {{user.id}}</div>

    {{/each}}
  
</div>


{{!-- add a comment by adding a form, don't show comment on home page  --}}
<form class="form new-comment-form">
      <div class="form-group">
        <input value='{{id}}' type='hidden' name='post_id' /> 
        <label for="comment-desc">description:</label>
        <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>

<script src="../js/post.js"></script>